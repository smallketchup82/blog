---
import { getCollection, render } from "astro:content";
import Base from "../../layouts/Base.astro";
export async function getStaticPaths() {
  let posts = await getCollection("posts");
  // remove drafts
  posts = posts.filter((post) => !post.data.draft);


  return posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<Base title={post.data.title} date={post.data.date}>
  <div class="prose prose-lg prose-invert max-w-none prose-code:before:hidden prose-code:after:hidden prose-headings:mt-3 prose-headings:mb-1 prose-p:leading-[1.5]">
    <Content />
  </div>
</Base>
